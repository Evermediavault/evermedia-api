# 应用基础配置
APP_NAME=Evermediavault API
APP_VERSION=0.1.0
APP_DESCRIPTION=Evermediavault HTTP API服务
DEBUG=false
ENVIRONMENT=development

# API配置
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# 服务器配置
HOST=127.0.0.1
PORT=8000
RELOAD=false

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=evermediavault
DB_CHARSET=utf8mb4
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=false

# 安全配置
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置（允许跨域）
# 白名单：逗号分隔或 JSON 数组，如 http://localhost:9000,http://127.0.0.1:9000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:9000,http://127.0.0.1:9000
# 开发时可设为 true 允许任意 origin，生产环境勿用
CORS_ORIGIN_ALLOW_ALL=false
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# Synapse (Filecoin Onchain Cloud)，不配置则 fastify.synapse / getSynapseClient() 为 null
# SYNAPSE_PRIVATE_KEY 仅在此示例中占位，实际从环境变量读取，不入配置、不落日志
# SYNAPSE_PRIVATE_KEY=0x...
# 可选：RPC URL，不设则按 SYNAPSE_NETWORK 使用默认端点
# SYNAPSE_RPC_URL=
# mainnet | calibration
SYNAPSE_NETWORK=calibration
# 是否使用 CDN 检索
# SYNAPSE_WITH_CDN=false
# 是否包含 dev 状态 SP（开发用）
# SYNAPSE_DEV=false
# 上传时强制创建新 dataset，避免「Data set not found」（默认 true；设为 false 可复用已有 dataset）
# SYNAPSE_FORCE_CREATE_DATA_SET=true

# 上传配置（逗号分隔 MIME 类型）
# UPLOAD_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,...
# 批量上传数量（单次最多文件数）
# UPLOAD_MAX_FILES=4
# 单文件最大尺寸（KB），如 10240 即 10MB
# UPLOAD_MAX_FILE_SIZE_KB=10240
