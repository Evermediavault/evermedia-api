# 应用基础配置
APP_NAME=Evermediavault API
APP_VERSION=0.1.0
APP_DESCRIPTION=Evermediavault HTTP API服务
DEBUG=false
ENVIRONMENT=development

# API配置
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=false

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=evermediavault
DB_CHARSET=utf8mb4
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=false

# 安全配置
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
