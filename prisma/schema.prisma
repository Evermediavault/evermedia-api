// Prisma 数据库模式定义

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // 连接池配置
  // connection_limit = 10
  // pool_timeout     = 20
}

